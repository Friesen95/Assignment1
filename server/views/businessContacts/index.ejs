<% include ../partials/header.ejs %>
<main class="container">
    <h1>Business Contacts</h1>
    <div class="panel panel-default">
        <div class="panel-heading">
            <a href="/businessContacts/add" title="Add Contact"><i class="fa fa-plus-circle"></i> Add a new Contact</a>
        </div> <!-- panel-heading -->
        <% if (contact.length > 0) { %>
        <div class="panel-body table-responsive">
            <table class="table table-bordered table-striped table-hover">
                <thead>
                    <tr>
                        <th>Name</th>
                        <th>Phone Number</th>
                        <th>Email</th>
                        <th>Business Name</th>
                        <th>Job Possibility</th>
                    </tr>
                </thead>
                </tbody>
                <% for (var i = 0; i < contacts.length; i++) { %>
                <tr>
                    <td>
                        <%= contacts[i].name %>
                    </td>
                    <td>
                        <%= contacts[i].phoneNum %>
                    </td>
                    <td>
                        <%= contacts[i].email %>
                    </td>
                    <td>
                        <%= contacts[i].businessName %>
                    </td>
                    <td>
                        <%= contacts[i].jobPossibilities %>
                    </td>
                    <td>
                        <a href="/users/<%= users[i]._id %>" title="Edit" class="btn btn-primary">
                            <i class="fa fa-pencil-square-o"></i>
                        </a>
                        <a href="/users/delete/<%= users[i]._id %>" title="Delete" onclick="return confirm('Are you sure you want to delete this Contact?');" class="btn btn-danger">
                            <i class="fa fa-trash-o"></i>
                        </a>
                    </td>   
                </tr>
                <% } %>
                </tbody>
            </table>
        </div> <!-- panel-body -->
        <% } %>
    </div><!-- panel panel-default -->

</main>
<% include ../partials/boot.ejs %>
<% include ../partials/footer.ejs %>
