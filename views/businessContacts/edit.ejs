<% include ../partials/header.ejs %>
<main class="container">
    <h1>Edit a Contact</h1>
    <div class="col-sm-4">
        <form method="post">
            <fieldset class="form-group">
                <label for="name">Name: *</label>
                <input name="name" type="text" class="form-control" required value="<%= user.name %>" autofocus />
            </fieldset>
            <fieldset class="form-group">
                <label for="phoneNum">Phone Number: *</label>
                <input name="phoneNum" type="tel" class="form-control" required value="<%= user.phoneNum %>" />
            </fieldset>
            <fieldset class="form-group">
                <label for="email">Email: *</label>
                <input name="email" type="email" class="form-control" required value="<%= user.email %>"/>
            </fieldset>
            <fieldset class="form-group">
                <label for="businessName">Business Name: *</label>
                <input name="businessName" type="text" class="form-control" required value="<%= user.businessName %>"/>
            </fieldset>
            <fieldset class="form-group">
                <label for="jobPossibilities">Job Possibility: *</label>
                <input name="jobPossibilities" type="text" class="form-control" required value="<%= user.jobPossibilities %>"/>
            </fieldset>
            <fieldset class="form-group text-right">
                <button type="submit" class="btn btn-primary" title="Update">
                    <i class="fa fa-pencil-square-o"></i> Update</button>
                <a href="/users/delete/<%= user._id %>" title="Delete" onclick="return confirm('Are you sure you want to delete this Contact?');" class="btn btn-danger">
                    <i class="fa fa-trash-o"></i> Delete
                </a>
                <a href="/index" title="Cancel"  class="btn btn-default">
                    <i class="fa fa-undo"></i>  Cancel
                </a>
            </fieldset>
        </form>
    </div>

</main>
<% include ../partials/footer.ejs %>
